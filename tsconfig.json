{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {},
    "sourceMap": true,
    "jsx": "react",
    "target": "ES2019",
    "allowJs": true,
    "esModuleInterop": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "isolatedModules": true
  },
  "include": ["**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules"]
}